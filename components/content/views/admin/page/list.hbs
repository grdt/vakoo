{{factory.flash}}

<div class="well">
    <a href="/admin/?task=content.edit&id={{_id}}" class="btn btn-default btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Добавить</a>
</div>

<table class="table table-striped">
    <tr>
        <th>
            Заголовок
        </th>
        <th>
            Тип
        </th>
        <th>
            Активно
        </th>
        <th>
            Дата публикации
        </th>
        <th>

        </th>
    </tr>
    {{#each pages}}
        <tr>
            <td>
                {{title}}
            </td>
            <td>
                {{#equal type 'news'}}
                    <button class="btn btn-default">Новость</button>
                {{/equal}}

                {{#equal type 'article'}}
                    <button class="btn btn-default">Статья</button>
                {{/equal}}
            </td>
            <td>
                {{#equal status 'active'}}
                    <button class="btn btn-success">Да</button>
                {{else}}
                    <button class="btn btn-danger">Нет</button>
                {{/equal}}
            </td>
            <td>
                <span class="date">{{publish}}</span>
            </td>
            <td>
                <a href="/admin/?task=content.edit&id={{_id}}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></a>
            </td>
        </tr>
    {{/each}}
</table>

{{#if pagination}}
    {{factory 'module' 'pagination' pagination}}
{{/if}}

