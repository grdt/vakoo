{{factory.flash}}

<div class="well">
    <a href="/admin/?task=shop.categories/index" class="btn btn-default">Списком</a>
    <a href="/admin/?task=shop.categories/index&view=tree" class="btn btn-primary">Деревом</a>
    <a href="/admin/?task=shop.categories/edit" class="btn btn-default btn-success"><span class="glyphicon glyphicon-plus"></span> Новая</a>
</div>

<table class="table table-striped">
    <tr>
        <th>
            Категория
        </th>
        <th>
            ID
        </th>
        <th>

        </th>
    </tr>
    {{#keyin categories}}
        <tr data-category="{{_id}}" data-parent="{{parent}}">
            <td>
                {{title}} ({{count}}) <a href="/admin/?task=shop.categories/edit&parent={{_id}}" class="btn btn-default btn-success"><span class="glyphicon glyphicon-plus"></span></a>
            </td>
            <td>
                {{_id}}
            </td>
            <td>
                <a href="/admin/?task=shop.categories/edit&id={{_id}}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></a>
                <a href="/admin/?task=shop.categories/changeParent&id={{_id}}" data-toggle="modal" data-target="#modal" class="btn btn-default"><span class="glyphicon glyphicon-tasks"></span></a>
            </td>
        </tr>
        {{#keyin childs}}
            <tr>
                <td>
                    &nbsp;&nbsp;&nbsp;&nbsp;└&nbsp;{{title}} ({{count}}) <a href="/admin/?task=shop.categories/edit&parent={{_id}}" class="btn btn-default btn-success"><span class="glyphicon glyphicon-plus"></span></a>
                </td>
                <td>
                    {{_id}}
                </td>
                <td>
                    <a href="/admin/?task=shop.categories/edit&id={{_id}}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="/admin/?task=shop.categories/changeParent&id={{_id}}" data-toggle="modal" data-target="#modal" class="btn btn-default"><span class="glyphicon glyphicon-tasks"></span></a>
                </td>
            </tr>
            {{#keyin childs}}
                <tr>
                    <td>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;└&nbsp;{{title}} ({{count}}) <a href="/admin/?task=shop.categories/edit&parent={{_id}}" class="btn btn-default btn-success"><span class="glyphicon glyphicon-plus"></span></a>
                    </td>
                    <td>
                        {{_id}}
                    </td>
                    <td>
                        <a href="/admin/?task=shop.categories/edit&id={{_id}}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></a>
                        <a href="/admin/?task=shop.categories/changeParent&id={{_id}}" data-toggle="modal" data-target="#modal" class="btn btn-default"><span class="glyphicon glyphicon-tasks"></span></a>
                    </td>
                </tr>
            {{/keyin}}
        {{/keyin}}
    {{/keyin}}
</table>

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

<script type="text/javascript">
    $('body').on('hidden.bs.modal', '.modal', function () {
        $(this).removeData('bs.modal');
    });
</script>