{{factory 'module' 'catalog:breadcrumbs'}}


<!--Shopping Cart Message-->
<section class="cart-message">
    <i class="fa fa-check-square"></i>
    <p class="p-style3">"{{product.title}}" добавлен в вашу корзину.</p>
    <a class="btn-outlined-invert btn-success btn-sm" href="/cart">В корзину</a>
</section><!--Shopping Cart Message Close-->

<!--Catalog Single Item-->
<section class="catalog-single">
    <div class="container">
        <div class="row">

            <!--Product Gallery-->
            <div class="col-lg-4 col-md-4">
                <div class="prod-gal master-slider" id="prod-gal">
                    <!--Slide1-->
                    <div class="ms-slide">
                        <img src="/masterslider/blank.gif" data-src="{{product.image.path}}" alt="{{product.title}}"/>
                        <img class="ms-thumb" src="{{product.image.path}}" alt="thumb" />
                    </div>

                    {{#each product.images}}
                        <div class="ms-slide">
                            <img src="/masterslider/blank.gif" data-src="{{path}}" alt="{{alt}}"/>
                            <img class="ms-thumb" src="{{path}}" alt="thumb" />
                        </div>
                    {{/each}}
                </div>
            </div>

            <!--Product Description-->
            <div class="col-lg-8 col-md-8">
                {{!
                <h1 style="background: #2f343b;color:white;padding:10px;letter-spacing:-6px;font-size: 100px;font-weight: 300;">LUXY<span style="color:orange;font-weight: 200;">sex<span style="font-size:75px;
font-weight: 200;">Y</span></span></h1>
                <div style="background: #2f343b;padding:10px;"><img src="/img/logo.png" alt=""/></div>
                }}
                <h1>{{product.title}}&nbsp;<br/><small>{{product.shortDesc}}</small></h1>
                {{#admin}}
                    <br/>
                    <a href="/admin/?task=shop.products/edit&id={{_id}}" class="sale" target="_blank">Edit</a><br/>
                {{/admin}}

                <!--
                <div class="rate">
                    <span class="{{#greater product.price 0}}active{{/greater}}"></span>
                    <span class="{{#greater product.price 0}}active{{/greater}}"></span>
                    <span class="{{#greater product.price 0}}active{{/greater}}"></span>
                    <span class="{{#greater product.price 2000}}active{{/greater}}"></span>
                    <span class="{{#greater product.price 2500}}active{{/greater}}"></span>
                </div>
                -->


                {{!
                <div class="old-price">815,00 $</div>
                }}


                <div class="price">{{number-format product.price}} <span class="fa fa-rouble"></span></div>


                {{#if product.size}}
                    <div class="size">
                        <a href="javascript:goToDescr()">Размер {{product.size.current}}</a>
                    </div>
                {{/if}}

                {{#if product.available}}

                <div class="buttons group">
                    <div class="qnt-count">
                        <a class="incr-btn" href="#">-</a>
                        <input id="quantity" class="form-control" type="text" value="1">
                        <a class="incr-btn" href="#">+</a>
                    </div>

                    <a class="btn btn-primary btn-sm add-cart-btn" data-id="{{product._id}}" data-value-selector="#quantity" id="addItemToCart" href="#"><i class="icon-shopping-cart"></i>В корзину</a>
                    <a class="btn btn-success btn-sm one-click" href="/checkout?product={{product._id}}" data-id="{{product._id}}"><i class="fa fa-send-o"></i>Купить в 1 клик</a>
                </div>

                {{else}}
                    <div class="buttons group">
                        <a class="btn btn-primary btn-sm popover-me top hover" data-toggle="modal" data-target="#availableModal" data-content="К сожалению на данный момент товара нет в наличии, но скоро он появится и мы с удовольствием сообщим вам об этом." data-id="{{product._id}}" id="" href="#">
                            <i class="fa fa-flash"></i>Сообщить при появлении
                        </a>
                    </div>
                {{/if}}
                <p class="p-style2">
                    {{{trimString product.desc 150 '...<br/><br/><a href="javascript:goToDescr()" class="btn btn-success btn-sm"><i class="fa fa-list"></i> Подробнее о товаре</a>'}}}
                </p>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-5">
                        <h3>Поделиться</h3>
                        <div class="social-links">
                            <a href="http://vk.com/share.php?url={{root}}{{apply product 'url'}}" target="_blank"><i class="fa fa-vk"></i></a>
                            <a href="http://www.facebook.com/sharer/sharer.php?u={{root}}{{apply product 'url'}}" target="_blank"><i class="fa fa-facebook-square"></i></a>
                            <a href="http://twitter.com/share?text={{product.title}}&url={{root}}{{apply product 'url'}}&hashtags=luxysexy" target="_blank"><i class="fa fa-twitter-square"></i></a>
                        </div>
                    </div>

                    {{!
                    <div class="col-lg-8 col-md-8 col-sm-7">
                        <h3>Tags</h3>
                        <div class="tags">
                            <a href="#">Nikon, </a>
                            <a href="#">camera, </a>
                            <a href="#">hd video</a>
                        </div>
                    </div>
                    }}
                </div>
                <div class="promo-labels">
                    <div data-content="{{#greater product.price factory.vakoo._config.delivery.mincart}}Доставка <b>{{product.title}}</b> осуществляется бесплатно по всей России.{{else}}Стоимость доставки составит {{factory.vakoo._config.delivery.price}} <span class='fa fa-rouble'></span> при заказе на сумму до {{factory.vakoo._config.delivery.mincart}} <span class='fa fa-rouble'></span> по всей России.{{/greater}}" data-html="true"><span><i class="fa fa-truck"></i>{{#greater product.price factory.vakoo._config.delivery.mincart}}Бесплатно{{else}}{{factory.vakoo._config.delivery.price}} руб.{{/greater}}</span></div>
                    <div data-content="Доставка по всей России в течении одной недели."><i class="fa fa-space-shuttle"></i>По всей России</div>
                    <div data-content="Товар будет проверен нашими специалистами и бережно запакован без опознавательных признаков."><i class="fa fa-shield"></i>Гарантии</div>
                </div>
            </div>
        </div>
    </div>
</section><!--Catalog Single Item Close-->
<style type="text/css">
    .form-control-feedback{
        margin-top:-12px;
