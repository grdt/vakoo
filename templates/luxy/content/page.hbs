{{factory 'module' 'catalog:breadcrumbs'}}

<!--Blog Single-->
<section class="blog">
    <div class="container">
        <div class="row">

            <!--Left Column-->
            <div class="col-lg-9 col-md-9">
                <h1 class="title">{{page.title}}</h1>
                <!--Post-->
                <div class="post">
                    {{!
                    <img src="img/blog/blog_01.png" alt="Blog post"/>
                    }}
                    <p class="p-style3">{{{partial page.content partial this}}}</p>
                    {{!
                    <footer>
                        <div class="share">
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook-square"></i></a>
                            <a href="#"><i class="fa fa-pinterest-square"></i></a>
                            <a href="#"><i class="fa fa-envelope"></i></a>
                        </div>
                        <ul class="meta">
                            <li><i class="fa fa-user"></i><a href="#">By Bedismo</a></li>
                            <li><i class="fa fa-calendar"></i><a href="#">12.02.2014</a></li>
                        </ul>
                    </footer>
                    }}
                </div>
            </div>
            <!--Sidebar-->
            <div class="col-lg-3 col-md-3">
                {{!
                <!--Search Widget-->
                <h3>Search the blog</h3>
                <form class="sidebar-search">
                    <input type="text" class="form-control" name="search-blog" placeholder="Search">
                    <button type="submit"></button>
                </form>
                <!--Tags-->
                <h3>Tags</h3>
                <div class="tags">
                    <a href="#">Bushido</a>,
                    <a href="#">theme</a>,
                    <a href="#">HTML5</a>,
                    <a href="#">premium</a>,
                    <a href="#">shopping</a>,
                    <a href="#">e-commerce</a>
                </div>
                }}
                <!--Latest posts-->
                <h3>Другие статьи</h3>
                <div class="latest-posts">

                    {{#each related}}
                        <div class="post">
                            <a href="{{url}}">{{label}}</a>
                        </div>
                    {{/each}}

                    {{!
                    <div class="post">
                        <a href="#">New awesome theme out there...</a>
                        <div class="meta">
                            <a href="#">Comments <span>(34)</span></a>
                            <span class="date">12.02.2014</span>
                        </div>
                    </div>
                    <div class="post">
                        <a href="#">Lorem ipsum dolor sit amet...</a>
                        <div class="meta">
                            <a href="#">Comments <span>(22)</span></a>
                            <span class="date">12.02.2014</span>
                        </div>
                    </div>
                    <div class="post">
                        <a href="#">Anim pariatur cliche reprehenderit...</a>
                        <div class="meta">
                            <a href="#">Comments <span>(81)</span></a>
                            <span class="date">12.02.2014</span>
                        </div>
                    </div>
                    }}
                </div>
            </div>
        </div>
    </div>
</section><!--Blog Single Close-->


