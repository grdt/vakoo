<!doctype html>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
    <meta name="description" content="{{factory.meta.desc}}"/>
    <meta name="title" content="{{factory.meta.title}}"/>
    <meta name="keywords" content="{{factory.meta.keywords}}"/>
    {{factory 'js' 'http://grd.im/jquery.js'}}
    {{factory 'js' 'http://grd.im/bootstrap.js'}}
    {{factory 'css' 'http://grd.im/bootstrap.css'}}
    {{factory 'css' 'http://grd.im/bootstrap-theme.css'}}
	<title>{{factory.title}}</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            {{factory 'module' 'logo'}}
            {{factory 'module' 'catalog_menu'}}
        </div>
        <div class="col-md-6">
            {{factory 'module' 'header'}}
        </div>
        <div class="col-md-4">
            {{factory 'module' 'cart'}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{factory 'module' 'breadcrumbs'}}
            {{factory.content}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{factory 'module' 'footer'}}
        </div>
    </div>
</div>


</body>
</html>